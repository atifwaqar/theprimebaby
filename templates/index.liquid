<section class="hero" style="padding:32px;border:1px solid #eee;border-radius:12px;">
  <h1>{{ shop.name | escape }}</h1>
  <p>{{ shop.description }}</p>
</section>

<section class="grid" style="display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:16px;margin-top:24px;">
  {% for handle in collections.frontpage.products %}
    {% assign product = all_products[handle] %}
    {% render 'card-product', product: product, money_format: shop.money_format %}
  {% endfor %}
</section>
